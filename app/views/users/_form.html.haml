= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :age
    = f.number_field :age
  .field
    = f.label :active
    = f.check_box :active
  .field
    = f.label :last_online
    = f.date_select :last_online
  .actions
    = f.submit 'Save'
