= form_for @message do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :sender_id
    = f.number_field :sender_id
  .field
    = f.label :receiver_id
    = f.number_field :receiver_id
  .field
    = f.label :message
    = f.text_area :message
  .field
    = f.label :timestamp
    = f.datetime_select :timestamp
  .actions
    = f.submit 'Save'
